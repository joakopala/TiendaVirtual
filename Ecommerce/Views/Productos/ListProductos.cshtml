@model IEnumerable<Entidades.Producto>

@{
    ViewBag.Title = "ListProductos";
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>Listados de productos</h2>
                </div>
                <div class="page_link">
                    <a href="/Home/Index">Productos</a>
                    <a href="/Home/Contacto">ListadoProductos</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->

<section class="section_gap">
    <div class="container">

        <p>
            <a href="/Producto/Editar">Nuevo Producto</a>
        </p>
        <table id="Productos" class="display">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecioUnitario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        Acciones 
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioUnitario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a href="/Productos/Editar/@item.IdProducto"> Modificacion</a> |
                    <a href="/Productos/Eliminar/@item.IdProducto"> Eliminar</a>
                </td>
            </tr>
        </tbody>
            }

        </table>
    </div>
</section>

<script src="~/Scripts/Productos/ListProductos.js"></script>
